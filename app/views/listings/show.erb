<h1><%=@listing.title %></h1>
 <p>Description: <%= @listing.body %></p>
 <p>Category: <%= @listing.find_category %></p>
 <p>User: <%= @listing.find_user.name %></p>
 <p>Contact Info: <%= @listing.find_user.email %></p>


 <% if current_user == @listing.user %>
 <%= link_to "Edit Listing", edit_listing_path %> <br> <br>
 <% end %>

 <% if current_user == @listing.user %>
 <%= button_to "Delete Listing", listing_path(@listing), method: :delete, data: {confirm: "Are you sure you want to delete this?"} %> <br> <br>
 <% end %>
<%= link_to "Add Comment", new_comment_path %> <br> <br>

 <h2>Comments</h2>
 <% @listing.comments.each do |comment| %>
 <ul>
   <li><%= comment.body %> - <%= comment.find_user.name %> </li> 
 </ul>
 <% end %>
