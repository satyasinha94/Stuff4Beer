<h1>Create A New Listing</h1>
<%= form_for @listing do |f| %>
  <div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control" %> <br> <br>
  <%= f.label :body %>
  <%= f.text_area :body, class: "form-control" %> <br> <br>
  <%= f.label :category %>
   <%=f.collection_select(:category_id, Category.all, :id, :name) %> <br> <br>
  <%= f.label :user %>
  <%=f.collection_select(:user_id, User.all, :id, :name) %> <br> <br>
  <%= f.submit "Create Listing", class: "btn btn-success" %>
  </div>
<% end %>
