<!DOCTYPE html>
<html>
  <head>
    <title>Stuff4beer</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
     <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>

  <body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <!-- Brand/logo -->
    <a class="navbar-brand" <%= link_to "Homepage", main_path %></a>

    <!-- Links -->
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link" <%= link_to "All Listings", listings_path %></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" <%= link_to "Categories", categories_path %></a>
      </li>



        <%if logged_in? %>
        <li class="nav-item">
        <a class="nav-link" <%= link_to "My Listings", user_path(current_user) %></a>
      </li>
      <li class="nav-item">
      <a class="nav-link" <%=link_to "New Listing", new_listing_path%> </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" <%= link_to "Logout", logout_path, method: :delete %></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" <%= link_to "Edit User", edit_user_path(current_user) %></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" <%= link_to "Delete Account", user_path(current_user), method: :delete, data: {confirm: "Are you sure you want to delete your account?"}%></a>
      </li>
    </ul>
      <% else %>
      <li class="nav-item">
        <a class="nav-link" <%= link_to "Login", login_path %></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" <%= link_to "Register", register_path %></a>
      </li>
    <% end %>

    <div class="search-bar">
    <%= form_tag search_path, method: :get, class: "navbar-form navbar-right search-form" do %>
      <%= text_field_tag(:search, params[:search]) %>
      <%= submit_tag "Search", name: nil %>
    <% end %>
    </div>
  </nav>

    <%= yield %>
  </body>
</html>
