<h1>Login</h1>


<% if flash[:notice] %>
<%= flash[:notice] %>
<% end %>

<div class="form">
  <%= form_tag(login_path) do %>

    <%= label_tag :name %> <br>
    <%= text_field_tag :name %> <br> <br>


    <%= label_tag :email %> <br>
    <%= text_field_tag :email %> <br> <br>


    <%= label_tag :password %> <br>
    <%= password_field_tag :password %> <br> <br>

    <%= submit_tag 'Login' %>

<% end %>
</div>
