<h1>Login or Register</h1>

<%= form_tag(login_path) do %>
  <%= label_tag :name %>
  <%= text_field_tag :name %> <br> <br>

  <%= label_tag :email %>
  <%= text_field_tag :email %> <br> <br>

  <%= label_tag :password %>
  <%= password_field_tag :password %> <br> <br>

  <%= submit_tag 'Login' %>
<% end %>
