<h1>Register</h1>

<div class="form">
<%= form_tag(register_path) do %>
  <%= label_tag :name %> <br>
  <%= text_field_tag :name %> <br> <br>

  <%= label_tag :email %> <br>
  <%= text_field_tag :email %> <br> <br>

  <%= label_tag :password %> <br>
  <%= password_field_tag :password %> <br> <br>

  <%= submit_tag 'Register' %>
<% end %>
</div>
